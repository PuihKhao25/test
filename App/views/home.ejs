<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% for( var i=0; i < allUser.length; i++){ %>
            <tr>
                <th scope="row">
                    <%= i+1 %>
                </th>
                <td>
                    <%= allUser[i].name %>
                </td>
                <td>
                    <%= allUser[i].email %>
                </td>
                <td>
                    <a href="editUser/<%= allUser[i]._id%>" class="btn border-shadow update">
                        <span class="btn btn-info"><i class="fas fa-pencil-alt"></i></span>
                    </a>
                    <a class="btn border-shadow delete">
                        <form action="deleteUser/<%= allUser[i]._id%>" method="post">
                            <button type="submit" class="btn btn-danger">
                                <span class="text-gradient"><i class="fas fa-times"></i></span>
                            </button>
                        </form>

                    </a>
                </td>
            </tr>
            <% } %>
    </tbody>
</table>